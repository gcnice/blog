
<div class="post_wrapper">
  <% if @articles.count <= 1 %>
  <h1><%= @articles.count %>&nbsp;&nbsp;Article</h2>
  <% else %>
  <h1><%= @articles.count %>&nbsp;&nbsp;Articles</h2>
  <% end %>
  <table  width="500"  >
    <% @articles.each do |article| %>
    <tr>
      <td class="title"><%= link_to article.title, article_path(article)%></td>
      <% if user_signed_in? %>
      <td  align="center"><%= link_to 'Edit', edit_article_path(article) %></td>
      <td  align="center"><%= link_to 'Destroy ', article_path(article),
      method: :delete,
      data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
    <% end %>
  </table>
</div>
